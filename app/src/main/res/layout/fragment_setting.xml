<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment" >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutChange1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/editRoutine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=" 루틴 입력 1"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/buttonMinus1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_input_delete"
                    android:backgroundTint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChange2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/editRoutine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="루틴 입력 2"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/buttonMinus2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_input_delete"
                    android:backgroundTint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChange3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/editRoutine3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="루틴 입력 3"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/buttonMinus3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_input_delete"
                    android:backgroundTint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChange4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/editRoutine4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="루틴 입력 4"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/buttonMinus4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_input_delete"
                    android:backgroundTint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutChange5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/editRoutine5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="루틴 입력 5"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/buttonMinus5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_input_delete"
                    android:backgroundTint="@color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@android:drawable/ic_input_add"
                android:backgroundTint="#201F1F"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정 적용" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>